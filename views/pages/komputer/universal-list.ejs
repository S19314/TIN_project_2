<%- include('../../fragments/header.ejs')%>
    <main>
        <h2>Lista komputerów</h2>
        <table class="table-list">
            <thead>
                <tr>
                    <th>Model</th>
                    <th>Data stworzenia </th>
                    <th>Akcje</th>
                </tr>
            </thead>
            <tbody>
                <% for ( let komputer of komputers ) { %>
                    <tr>
                        <td>
                            <%= komputer.model %>
                        </td>
                        <td>
                            <%= komputer.data_Stworzenia %>
                        </td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="komputers/details/<%= komputer._id %>"
                                        class="list-actions-button-details">Szczegóły</a>
                                </li>
                                <li>
                                    <a href="komputers/edit/<%= komputer._id %>"
                                        class="list-actions-button-edit">Edytuj</a>
                                </li>
                                <li>
                                    <a href="komputers/delete/<%= komputer._id %>"
                                        class="list-actions-button-delete">Usuń</a>
                                </li>
                            </ul>
                        </td>

                    </tr>
                    <% } %>
            </tbody>
        </table>
        <p><a href="/komputers/add" class="button-add">Dodaj nowy komputer</a></p>
    </main>
    <%- include('../../fragments/footer.ejs')%>